@page "/Register"
@inject TooltipService tooltipService
<PageTitle>Registration Page</PageTitle>

<RadzenCard class="rz-mx-0">
    <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Normal" Gap="1rem">
        <RadzenColumn Size="12" class="rz-text-align-center">
            <RadzenBreadCrumb>
                <RadzenBreadCrumbItem Path="" Text="" />
                <RadzenBreadCrumbItem Path="/Register" Text="Registration" />
            </RadzenBreadCrumb>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow class="rz-mt-6">
        <RadzenColumn Size="12" SizeMD="6" SizeLG="6" SizeXL="6" class="rz-text-align-center">
            <RadzenCard Variant="Variant.Filled" Class="rz-my-12 rz-mx-auto registerbtn" MouseEnter="@(args => ShowTooltip(args,"Register as Doctor",new TooltipOptions(){ Position = TooltipPosition.Top }))" MouseLeave="@(args => tooltipService.Close())" @onclick=@(args => navigateon("doctor")) Style="max-width: 420px">
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" Gap="1rem" Class="rz-p-4">
                    <RadzenImage Path="images/doctor.jpeg" Style="width: 100%; height: 100%;" />
                    
                </RadzenStack>
                <RadzenText TextStyle="TextStyle.H6" class="rz-color-secondary" TextAlign="TextAlign.Center"><strong>Register as Doctor</strong></RadzenText>
            </RadzenCard>

        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6" SizeLG="6" SizeXL="6" class="rz-text-align-center"> 
            <RadzenCard Variant="Variant.Filled" Class="rz-my-12 rz-mx-auto registerbtn" @onclick=@(args => navigateon("patient")) MouseEnter="@(args => ShowTooltip(args,"Register as Patient",new TooltipOptions(){ Position = TooltipPosition.Top }) )" MouseLeave="@(args => tooltipService.Close())" Style="max-width: 420px">
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" Gap="1rem" Class="rz-p-4">
                    <RadzenImage Path="images/patient.jpeg" Style="width: 100%; height: 100%;" />
                    
                </RadzenStack>
                <RadzenText TextStyle="TextStyle.H6" class="rz-color-secondary" TextAlign="TextAlign.Center">
                    <strong>Register as Patient</strong>
                </RadzenText>
            </RadzenCard>
        </RadzenColumn>



    </RadzenRow>

</RadzenCard>


@code {
    [Inject]
    private NavigationManager navigationManager { get; set; }
    private void navigateon(string url)
    {
        navigationManager.NavigateTo($"/Register/{url}");
    }
    void ShowTooltip(ElementReference elementReference, string message,TooltipOptions options = null) => tooltipService.Open(elementReference, message, options);

}
